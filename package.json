{
  "name": "kr-api",
  "version": "5.12.1",
  "private": true,
  "description": "Klickrhein Feature API (Excited Emu)",
  "main": "dist/index.js",
  "scripts": {
    "reset-dist": "node .develop/reset-dist.js",
    "dev": "npm run reset-dist && NODE_ENV=development concurrently -n 'TSC,API' -c 'auto' 'tsc -w' 'nodemon dist/index.js --delay 250ms'",
    "build": "npm run reset-dist && tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "format": "prettier --ignore-path .gitignore --write .",
    "update": "ncu"
  },
  "type": "module",
  "author": "Felix Heidecke",
  "license": "ISC",
  "imports": {
    "#common/*": "./dist/common/*",
    "#decorators/*": "./dist/decorators/*",
    "#features/*": "./dist/features/*",
    "#libs/*": "./dist/libs/*",
    "#plugins/*": "./dist/plugins/*",
    "#utils/*": "./dist/utils/*"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/session": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@noble/hashes": "^1.8.0",
    "@sentry/node": "^9.46.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "fastify": "^5.5.0",
    "knex": "^3.1.0",
    "lodash-es": "^4.17.21",
    "mysql2": "^3.14.3",
    "nodemailer": "^7.0.5",
    "redis": "^5.8.1",
    "slashes": "^3.0.12",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.17.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.0.2",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
