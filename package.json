{
  "name": "kr-api",
  "version": "5.11.7",
  "private": true,
  "description": "Klickrhein Feature API (Excited Emu)",
  "main": "dist/index.js",
  "scripts": {
    "reset-dist": "node .develop/reset-dist.js",
    "dev": "npm run reset-dist && NODE_ENV=development concurrently -n 'TSC,API' -c 'auto' 'tsc -w' 'nodemon dist/index.js --delay 250ms'",
    "build": "npm run reset-dist && tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "format": "prettier --ignore-path .gitignore --write .",
    "update": "ncu"
  },
  "type": "module",
  "author": "Felix Heidecke",
  "license": "ISC",
  "imports": {
    "#common/*": "./dist/common/*",
    "#decorators/*": "./dist/decorators/*",
    "#features/*": "./dist/features/*",
    "#libs/*": "./dist/libs/*",
    "#plugins/*": "./dist/plugins/*",
    "#utils/*": "./dist/utils/*"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/session": "^11.0.1",
    "@fastify/swagger": "^9.2.0",
    "@noble/hashes": "^1.5.0",
    "@sentry/node": "^8.35.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "knex": "^3.1.0",
    "lodash-es": "^4.17.21",
    "mysql2": "^3.11.3",
    "nodemailer": "^6.9.15",
    "redis": "^4.7.0",
    "slashes": "^3.0.12",
    "slugify": "^1.6.6",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.8.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.7",
    "npm-check-updates": "^17.1.6",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
