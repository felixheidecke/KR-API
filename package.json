{
  "name": "kr-api",
  "version": "5.10.3",
  "private": true,
  "description": "Klickrhein Feature API (Freepy Sapling)",
  "main": "dist/index.js",
  "scripts": {
    "reset-dist": "node .develop/reset-dist.js",
    "dev": "npm run reset-dist && NODE_ENV=development concurrently -n 'TSC,API' -c 'auto' 'tsc -w' 'nodemon dist/index.js --delay 250ms'",
    "build": "npm run reset-dist && tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "format": "prettier --ignore-path .gitignore --write .",
    "update": "ncu"
  },
  "type": "module",
  "author": "Felix Heidecke",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/session": "^10.9.0",
    "@fastify/swagger": "^8.14.0",
    "@noble/hashes": "^1.4.0",
    "@sentry/node": "^8.13.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "knex": "^3.1.0",
    "lodash-es": "^4.17.21",
    "mysql2": "^3.10.2",
    "nodemailer": "^6.9.14",
    "redis": "^4.6.14",
    "slashes": "^3.0.12",
    "slugify": "^1.6.6",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.9",
    "concurrently": "^8.2.2",
    "eslint": "^9.6.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^16.14.20",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  }
}
